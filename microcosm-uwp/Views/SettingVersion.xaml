<Page
    x:Class="microcosm.Views.SettingVersion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:microcosm.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20, 0, 0, 0">
            <TextBlock Margin="0,10,5,20" FontSize="32" Foreground="Black">microcosm</TextBlock>
            <TextBlock FontSize="24" Foreground="Black">Version</TextBlock>
            <TextBlock FontSize="24" Foreground="Black" x:Name="VersionBlock"></TextBlock>
            <TextBlock FontSize="24" Foreground="Black"></TextBlock>
            <TextBlock FontSize="24" Foreground="Black" x:Name="CopyRightBlock"></TextBlock>
            <TextBlock FontSize="20" Foreground="Black">https://ogatism.jp</TextBlock>
        </StackPanel>

    </Grid>
</Page>
