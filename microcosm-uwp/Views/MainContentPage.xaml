<Page
    x:Class="microcosm.Views.MainContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" SizeChanged="Grid_SizeChanged" MinWidth="1280">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" x:Name="UserBoxPanel" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,0" Grid.Column="0">
            <StackPanel x:Name="UserDataView">
                <Border Margin="10,0,10,5" BorderBrush="Black" BorderThickness="1">
                    <StackPanel Margin="5, 5, 5, 5">
                        <TextBlock FontWeight="Bold" Foreground="Black" FontSize="10">ユーザー1</TextBlock>
                        <TextBlock Foreground="Black" Text="{Binding User1Name}" FontSize="10" />
                        <TextBlock Foreground="Black" Text="{Binding User1DateStr}" FontSize="10" />
                        <TextBlock Foreground="Black" FontWeight="Bold" FontSize="10">イベント1</TextBlock>
                        <TextBlock Foreground="Black" Text="{Binding Event1Name}" FontSize="10" />
                        <TextBlock Foreground="Black" Text="{Binding Event1DateStr}" FontSize="10" />
                        <TextBlock Foreground="Black" FontWeight="Bold" Text="ユーザー2" FontSize="10" />
                        <TextBlock Foreground="Black" Text="{Binding User2Name}" FontSize="10" />
                        <TextBlock Foreground="Black" Text="{Binding User2DateStr}" FontSize="10" />
                        <TextBlock Foreground="Black" FontWeight="Bold" FontSize="10">イベント2</TextBlock>
                        <TextBlock Foreground="Black" Text="{Binding Event2Name}"  FontSize="10"/>
                        <TextBlock Foreground="Black" Text="{Binding Event2DateStr}"  FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0, 0, 0, 0">
            <Pivot>
                <PivotItem Header="List">
                    <StackPanel Orientation="Horizontal">
                        <ListView x:Name="PlanetCusp" BorderBrush="Gray" BorderThickness="1" IsItemClickEnabled="True" Width="100" Height="260" HorizontalAlignment="Left" Margin="10, 0, 0, 0" ItemsSource="{Binding}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="20" />
                                    <Setter Property="MinHeight" Value="20" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding name}" FontFamily="ms-appx:///Assets/ZODIAC_S.TTF#Zodiac S" />
                                        <TextBlock Text="{Binding degree1}" FontFamily="ms-appx:///Assets/ZODIAC_S.TTF#Zodiac S" Margin="10, 0, 0, 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ListView x:Name="HouseCusp" BorderBrush="Gray" BorderThickness="1" IsItemClickEnabled="True" Width="100" Height="260" HorizontalAlignment="Left" Margin="10, 0, 0, 0" ItemsSource="{Binding}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="20" />
                                    <Setter Property="MinHeight" Value="20" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding name}" />
                                        <TextBlock Text="{Binding degree1}" Margin="10, 0, 0, 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="分布">
                    <TextBlock Foreground="Black" Text="222" />
                </PivotItem>
                <PivotItem Header="↔">
                    <TextBlock Foreground="Black" Text="333" />
                </PivotItem>
            </Pivot>
        </StackPanel>

        <Frame x:Name="InfoFrame" Grid.Column="1" Grid.Row="1"></Frame>

        <StackPanel Grid.Column="1" Grid.RowSpan="2">
            <WebView Name="DateWeb" DOMContentLoaded="DateWeb_DOMContentLoaded" Height="400"></WebView>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.RowSpan="2" Name="CanvasWindow">
            <!--
            <WebView Name="Web" Width="640" Height="640" NavigationCompleted="Web_NavigationCompleted" DOMContentLoaded="Web_DOMContentLoaded"></WebView>
            -->
            <Canvas Background="Aquamarine" x:Name="ChartCanvas"/>
            <StackPanel Margin="0, 10, 0, 0">
                <TextBlock HorizontalAlignment="Center">Help Message</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
